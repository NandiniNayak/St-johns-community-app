<h1>search results</h1>
<% if @events.present? %>
    <h1>Events</h1>
<table class="table">
  <thead class ="tab-style">
    <tr>
      <th>Organisation</th>
      <th>User</th>
      <th>Title</th>
      <th>Info</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Image</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody class="tbody-style">
    <% @events.each do |event| %>
      <tr>
              <td><%= event.organisation.name %></td>
              <td><%= event.user%></td>
              <td><%= event.title %></td>
              <td><%= truncate(event.info) %></td>
              <td><%= event.date %></td>
              <td><%= event.start_time %></td>
              <td><%= event.end_time %></td>
              <td><%= event.image %></td>
              <td><%= event.street %></td>
              <td><%= event.suburb %></td>
              <td><%= event.state %></td>
              <td><%= event.postcode %></td>
              <td><%= event.latitude %></td>
              <td><%= event.longitude %></td>
              <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% elsif @jobs.present?%>
    <h1>Jobs</h1>

<table class="table">
  <thead class = "job-style">
    <tr>
      <th>Title</th>
      <th>Job type</th>
      <th>Salary</th>
      <th>Experience</th>
      <th>Age</th>
      <th>Contact</th>
      <th>Email</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th>State</th>
      <th>Organisation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class = "jbody-style">
    <% @jobs.each do |job| %>
      <tr>
              <td><%= job.title %></td>
              <td><%= job.job_type %></td>
              <td><%= job.salary %></td>
              <td><%= job.experience %></td>
              <td><%= job.age %></td>
              <td><%= job.contact %></td>
              <td><%= job.email %></td>
              <td><%= job.street %></td>
              <td><%= job.suburb %></td>
              <td><%= job.postcode %></td>
              <td><%= job.state %></td>
              <td><%= job.organisation.name %></td>
              <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<p>no matching results for the term <%=params[:search]%></p>
<% end %>