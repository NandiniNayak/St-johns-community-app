<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title"><%= @event.title %></h2>
      </div>
      <div class="panel-body">
<p>
  <strong>Organisation:</strong>
  <%= @event.organisation.name %>
</p>


<p>
  <strong>Info:</strong>
  <%= @event.info %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date.strftime('%A, %d %B %Y') %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time.strftime('%l:%M%P') %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time.strftime('%l:%M%P') %>
</p>

<p>
  <strong>Image:</strong>
  <%= @event.image %>
</p>

<p>
  <strong>Street:</strong>
  <%= @event.street %>
</p>

<p>
  <strong>Suburb:</strong>
  <%= @event.suburb %>
</p>

<p>
  <strong>State:</strong>
  <%= @event.state %>
</p>

<p>
  <strong>Postcode:</strong>
  <%= @event.postcode %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @event.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @event.longitude %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
</div>
</div>
</div>
</div>
<img src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @event.latitude %>,<%= @event.longitude %>&zoom=12&size=400x400">