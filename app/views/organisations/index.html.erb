<h1>Organisations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Org type</th>
      <th>Info</th>
      <th>Contact name</th>
      <th>Contact email</th>
      <th>Contact phone</th>
      <th>Street</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
              <td><%= organisation.name %></td>
              <td><%= organisation.org_type %></td>
              <td><%= truncate(organisation.info) %></td>
              <td><%= organisation.contact_name %></td>
              <td><%= organisation.contact_email %></td>
              <td><%= organisation.contact_phone %></td>
              <td><%= organisation.street %></td>
              <td><%= organisation.suburb %></td>
              <td><%= organisation.state %></td>
              <td><%= organisation.postcode %></td>
              <td><%= organisation.latitude %></td>
              <td><%= organisation.longitude %></td>
              <td><%= link_to 'Show', organisation %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation) %></td>
        <td><%= link_to 'Delete', organisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

