<h1>Issues</h1>

<table class="table">
  <thead class ="issue-style">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Suburb</th>
      <th>City</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Contact</th>
      <th>Priority</th>
      <th>Solved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class ="issuebody-style">
    <% @issues.each do |issue| %>
      <tr class = "<%= issue.solved ? '':'red' %>">
              <td><%= issue.title %></td>
              <td><%= truncate(issue.description) %></td>
  
              <td><%= issue.suburb %></td>
              <td><%= issue.city %></td>
              <td><%= issue.state %></td>
              <td><%= issue.postcode %></td>
              <td><%= issue.contact %></td>
              <td><%= issue.priority %></td>
              <td><%issue.solved%></td>
              <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Delete', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
